{% schema %}
{
  "name": "Image Text Section 4 Col",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text"
    }
  ],
  "presets": [
    {
      "name": "Image and Text Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-image-text-section page-width">
  <div class="custom-image-container">
    {% if section.settings.image %}
      <img src="{{ section.settings.image | img_url: 'medium' }}" alt="{{ section.settings.heading }}">
    {% endif %}
  </div>
  <div class="custom-text-container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.paragraph }}</p>
  </div>
</div>

<style>
    .custom-image-text-section {
      display: flex;
      align-items: center;
      flex-direction: row;
      width: 100%; 
      padding: 20px 0; 
      box-sizing: border-box;
      background-color: #fbfcfb;
      margin-top: 50px;
      margin-bottom: 50px;
    }

    .custom-image-container {
      display: flex; 
      justify-content: center; 
      align-items: center; 
      flex: 1 1 25%; /* 1/4 width */
    }

    .custom-text-container {
      flex: 3 1 75%; /* 3/4 width */
      padding: 0 20px; 
    }

    .custom-image-container img {
      max-width: 100%;
      height: auto;
      display: block;
    }


    .custom-text-container p {
      font-family: Poppins, sans-serif;
      font-size: 24px;
      font-weight: 300;
      line-height: 36px;
      text-align: left;
    }

    /* Media query for mobile screens */
  
    @media screen and (max-width: 768px) {
      .custom-image-text-section {
        flex-direction: column; /* Stack items vertically on mobile */
        text-align: center; 
      }

      .custom-image-container, .custom-text-container {
        flex: 1 1 100%;
        padding: 10px 0; 
      }

      .custom-text-container {
        padding: 10px 10px; 
      }
    }
</style>
